{
  "name": "task-manager-mvc",
  "version": "1.0.0",
  "description": "A comprehensive MVC demo with Express, EJS, Tailwind, PostgreSQL, and Prisma",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "postinstall": "prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "npx prisma db seed",
    "db:reset": "npx prisma migrate reset"
  },
  "keywords": [
    "mvc",
    "express",
    "ejs",
    "tailwind",
    "postgresql",
    "prisma"
  ],
  "author": "Abhishek Gaire",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "method-override": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.9.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
