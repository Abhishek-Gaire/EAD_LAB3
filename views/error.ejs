<%- include('./layouts/main', { body: `
<div class="flex flex-col items-center justify-center min-h-[60vh]">
  <div class="bg-white shadow-lg rounded-lg p-10 max-w-xl w-full text-center">
    <div class="mb-4">
      <i class="fas fa-exclamation-triangle text-5xl text-yellow-400 mb-2"></i>
    </div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">${title}</h1>
    <p class="text-lg text-gray-700 mb-4">${message}</p>
    ${error && error.status ? `
    <p class="text-sm text-gray-500 mb-2">Error Code: ${error.status}</p>
    ` : ''} ${error && error.stack ? `
    <pre
      class="text-xs text-red-500 bg-gray-100 rounded p-2 overflow-x-auto mt-4"
    >
${error.stack}</pre
    >
    ` : ''}
    <a
      href="/"
      class="mt-6 inline-block px-6 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors"
      >Go Home</a
    >
  </div>
</div>
` }) %>
