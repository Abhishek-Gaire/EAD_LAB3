  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %> | Task Manager
  </title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Font Awesome for icons -->
