<header class="bg-white shadow-md border-b-2 border-primary-500">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo and Title -->
      <div class="flex items-center space-x-3">
        <div class="bg-primary-500 p-2 rounded-lg">
          <i class="fas fa-tasks text-white text-xl"></i>
        </div>
        <h1 class="text-2xl font-bold text-gray-800">
          <a href="/tasks" class="hover:text-primary-600 transition-colors">
            Task Manager
          </a>
        </h1>
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-6">
        <a href="/tasks"
          class="flex items-center space-x-2 px-4 py-2 rounded-lg transition-colors <%= currentPath === '/tasks' ? 'bg-primary-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="fas fa-list"></i>
          <span>All Tasks</span>
        </a>

        <a href="/tasks/create"
          class="flex items-center space-x-2 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
          <i class="fas fa-plus"></i>
          <span>New Task</span>
        </a>

        <a href="/about"
          class="flex items-center space-x-2 px-4 py-2 rounded-lg transition-colors <%= currentPath === '/about' ? 'bg-primary-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="fas fa-info-circle"></i>
          <span>About</span>
        </a>
      </div>
    </div>
  </nav>
</header>